<script>
		function approove()
			{
				if(document.feedform.fname.value == "")
				{
					window.alert("Please enter your name");
					document.feedform.fname.focus();
					return false;
				}
				
				if(document.feedform.mail.value == "")
				{
					window.alert("Please enter your email address");
					document.feedform.mail.focus();
					return false;
				}
				
				if(document.feedform.tnc.value == "agree")
				{
					window.alert("Please read the terms and condition");
					document.feedform.tnc.focus();
					return false;
				}
				
			}
		
</script>

